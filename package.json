{
  "name": "ts-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
    "web": "ts-node-dev --respawn --transpile-only --poll ./src/web/index.ts",
    "start": "ts-node ./src/index.ts",
    "lint": "prettier --write .",
    "build": "tsc"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-angular": "^12.1.4",
    "@types/express": "^4",
    "@types/glob": "^7",
    "@types/mongoose": "^5",
    "@types/node": "^16.4.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dlx @yarnpkg/doctor && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write",
    "*.js": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "dependencies": {
    "@types/crypto-js": "^4.0.2",
    "axios": "^0.21.1",
    "consola": "^2.15.3",
    "crypto-js": "^4.1.1",
    "discord.js": "^13.1.0",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "mongoose": "^5.13.3",
    "ojsama": "^2.2.0"
  }
}
